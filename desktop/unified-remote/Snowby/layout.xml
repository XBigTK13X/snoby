<layout>
	<row>
		<button text="SLEEP" ontap="sleepComputer" />
		<button text="WAKE" ontap="@wol,MA:AC:AD:DR:RE:S1" />
	</row>
	<row>
		<button text="FULL\nSCREEN" ontap="toggleFullScreen" />
		<button text="TOGGLE\nHDR" ontap="toggleHdr" />
		<button text="APP\nEXIT" ontap="exitApp" />
	</row>
	<row>
		<button text="SUBS\nSMALLER" ontap="subSizeMinus" />
		<button text="SUBS\nLARGER" ontap="subSizePlus" />		
	</row>
